<% flat = data.flats[owner] %>
<div class="banner-medium" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.5) 0%, rgba(0,0,0,0) 100%), url('https://kitt.lewagon.com/placeholder/cities/<%= flat[:city_slug] %>');">
</div>
<div class="container">
  <div class="flat">
    <div class="flat-details">
      <div class="flat-owner">
        <%= image_tag "https://kitt.lewagon.com/placeholder/users/#{owner.downcase}", class: "img-circle avatar-small" %>
        <p><%= owner %></p>
      </div>
      <div class="flat-score">
        <h4><%= flat[:description] %></h4>
        <p><%= flat[:city_name] %></p>
        <% flat.rating.times do %>
          <i class="fa fa-star-o color-yellow" aria-hidden="true"></i>
        <%end %>
      </div>
    </div>
    <form>
      <h2>Book this flat</h2>
      <div class="date-fields">
        <div class="form-group">
          <label for="checkin"></label>
          <div class="form-control" type="date" placeholder=<%= Date.today %> id="checkin"></div>
        </div>
        <div class="form-group">
          <label for="checkout"></label>
          <div class="form-control" type="date" placeholder=<%= Date.today + 2 %> id="checkout"></div>
        </div>
      </div>
      <div class="form-group">
        <label for="guest"></label>
        <div class="form-control" type="integer" placeholder="2 guests" id="guest"></div>
      </div>
      <button type="submit" class="btn btn-warning">Submit</button>
    </form>
  </div>
</div>


