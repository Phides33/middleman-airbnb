<div id="about">
  <div class="team">
    <h1>This template was built with <i class="fa fa-heart"></i> by</h1>
    <ul class="list-inline">
      <% data.buddies.each do |buddy| %>
        <li>
          <% link_to "https://kitt.lewagon.com/alumni/#{buddy.pseudo.downcase}", target: "_blank" do %>
            <%= image_tag "https://kitt.lewagon.com/placeholder/users/#{buddy.pseudo.downcase}", class: "img-circle" %>
          <% end %>
          <h2><%= buddy.name %></h2>
          <p>
            <% link_to "https://github.com/#{buddy.pseudo.downcase}", target: "_blank" do %>
              <i class="fa fa-github"></i> <%= buddy.pseudo %>
            <% end %>
          </p>
        </li>
      <% end %>
    </ul>
  </div>
</div>
